    "noUnusedLocals": false,
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__"
  ]
}
